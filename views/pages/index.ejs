<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>The Pokemon App - Log In</title>

        <link href="/styles/index.css" rel="stylesheet">
        <link rel="icon" href="/images/pokeball.png">

        <script src="/scripts/index.js" type="module"></script>
    </head>
    <body id="index-body">
        <main id="auth-layout">
            <section id="auth-image-side">
                <div class="image-overlay">
                    <img class="logo-img-side" src="../images/pokemon_logo.png">
                    <h1 class="welcome-text">Welcome, Trainer</h1>
                </div>
            </section>
            <section id="auth-form-side">

                <!-- LOGIN -->
                <div id="log-in-container">

                    <h2 class="form-title">Inicio de sesión</h2>

                    <div id="log-in-error"></div>

                    <form id="log-in-form">
                        <div class="input-wrapper">
                            <input type="text" name="username" class="log-in-text-input" placeholder="Usuario">
                        </div>

                        <div class="input-wrapper">
                            <input type="password" name="password" class="log-in-text-input" id="log-in-password" placeholder="Contraseña">
                            <button type="button" class="password-eye-icon" id="eye-icon-1">
                                <span>&#128065;</span>
                            </button>
                        </div>

                        <button type="submit" id="log-in-button">
                            Iniciar Sesión
                        </button>
                    </form>

                    <button id="to-register-button" class="switch-button">
                        ¿No tienes cuenta? ¡Regístrate aquí!
                    </button>
                </div>


                <!-- REGISTER -->
                <div id="register-container">

                    <h2 class="form-title">Registro de cuenta</h2>

                    <div id="register-error"></div>

                    <form id="register-form">
                        <div class="input-wrapper">
                            <input type="text" name="username" class="register-text-input" placeholder="Usuario">
                        </div>

                        <div class="input-wrapper">
                            <input type="password" name="password" class="register-text-input" id="register-password" placeholder="Contraseña">
                            <button type="button" class="password-eye-icon" id="eye-icon-2">
                                <span>&#128065;</span>
                            </button>
                        </div>

                        <div class="input-wrapper">
                            <input type="password" name="passwordconfirm" class="register-text-input" id="register-confirm-password" placeholder="Confirmar Contraseña">
                            <button type="button" class="password-eye-icon" id="eye-icon-3">
                                <span>&#128065;</span>
                            </button>
                        </div>

                        <button type="submit" id="register-button">
                            Registrarse
                        </button>
                    </form>

                    <button id="to-login-button" class="switch-button">
                        ¿Ya tienes cuenta? ¡Inicia sesión aquí!
                    </button>
                </div>

            </section>
        </main>
    </body>
</html>